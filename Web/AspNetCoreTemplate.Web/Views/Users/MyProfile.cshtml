<div class="container">
    <div class="row profile">
        <div class="col-md-3">
            <div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <div class="profile-userpic">
                    <img src="http://static.guim.co.uk/sys-images/Lifeandhealth/Pix/pictures/2009/3/3/1236074833250/Angry-man-001.jpg" class="img-responsive" alt="">
                </div>
                <!-- END SIDEBAR USERPIC -->
                <!-- SIDEBAR USER TITLE -->
                <div class="profile-usertitle">
                    <div class="profile-usertitle-name">
                        username
                    </div>
                </div>
                <!-- END SIDEBAR USER TITLE -->
                <!-- SIDEBAR BUTTONS -->
                <!-- END SIDEBAR BUTTONS -->
                <!-- SIDEBAR MENU -->
                <div class="container">
                    <ul>
                        <li class="active">
                            <a asp-action="MyPosts">
                                <i class="fas fa-book"></i>
                                MyPosts
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-cogs"></i>
                                Account Settings
                            </a>
                        </li>
                        <li>
                            <a href="#">
                                <i class="fas fa-info"></i>
                                Help
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- END MENU -->
            </div>
        </div>
        <div class="col-md-8">
            <div class="profile-content">
                <div class="row">
                    <div class="card promoting-card col-md-6" style="display:inline-block">
                        <!-- Card content -->
                        <div class="card-body d-flex flex-row">
                            <!-- Avatar -->
                            <!-- Content -->
                            <div>
                                <!-- Title -->
                                <h4 class="card-title font-weight-bold mb-2">@Model.Title</h4>
                                <!-- Subtitle -->
                                <p class="card-text"><i class="far fa-clock pr-2"></i>@Model.Date</p>
                            </div>
                        </div>
                        <!-- Card image -->
                        <div class="view overlay">
                            <img class="card-img-top rounded-0" src="@Model.ImageURL" alt="Card image cap">
                            <a href="#!">
                                <div class="mask rgba-white-slight"></div>
                            </a>
                        </div>
                        <!-- Card content -->
                        <div class="card-body">
                            <div class="collapse-content">
                                <!-- Text -->
                                <p class="card-text collapse" id="collapseContent">Recently, we added several exotic new dishes to our restaurant menu. They come from countries such as Mexico, Argentina, and Spain. Come to us, have some delicious wine and enjoy our juicy meals from around the world.</p>
                                <!-- Button -->
                                <a>@Model.Likes Likes</a>
                                <a>10 Comments</a>
                                <a class="btn btn-flat red-text p-1 my-1 mr-0 mml-1 collapsed" data-toggle="collapse" href="#collapseContent" aria-expanded="false" aria-controls="collapseContent"></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
    <br>
